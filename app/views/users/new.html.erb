<h1> New User </h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: @user %>      
      <%= f.label :name %>
      <%= f.text_field :name %> 

      <%= f.label :email %>
      <%= f.text_field :email %>
 
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>      

      <%= f.submit "Create account" %>
    <% end %>
  </div>
</div>
